<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="DefaultAppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="InputText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textColorHint">@color/black_effective</item>
        <item name="colorControlNormal">@color/black_effective</item>
        <item name="colorControlActivated">@color/black_effective</item>
        <item name="colorControlHighlight">@color/black_effective</item>
    </style>

</resources>