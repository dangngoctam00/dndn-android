<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/cardView_img"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/iv_instruction_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_title_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cardView_img"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_details_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_below="@id/tv_title_instruction"
            android:layout_toEndOf="@+id/cardView_img"
            android:layout_marginHorizontal="10dp"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>